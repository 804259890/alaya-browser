profile: {{ app_env }}
jasypt:
  encryptor:
    password: ${JASYPT_ENCRYPTOR_PASSWORD:}
server.port: {{ server_port }}
spring:
  datasource:
    url: jdbc:mysql://{{ mysql.one.url }}/{{ mysql.one.scan_api.db }}?useUnicode=true&characterEncoding=utf-8&useSSL=false&useTimezone=true&serverTimezone=GMT%2B8&allowMultiQueries=true
    username: {{ mysql.one.scan_api.user }}
    password: {{ mysql.one.scan_api.pass }}
    type: com.alibaba.druid.pool.DruidDataSource
    driver-class-name: com.mysql.jdbc.Driver
    initialSize: 5
    minIdle: 10
    maxActive: 100
    maxWait: 60000
    timeBetweenEvictionRunsMillis: 60000
    minEvictableIdleTimeMillis: 30000
    validationQuery: select 'x'
    testWhileIdle: true
    testOnBorrow: false
    testOnReturn: false
    poolPreparedStatements: true
    maxPoolPreparedStatementPerConnectionSize: 100
  elasticsearch:
    high-level-client:
      hosts: {{ es.url }}
      port: {{ es.port }}
      schema: http
      username: {{ es.username }}
      password: {{ es.password }}
      blockIndexName: browser_block_{{ app_env }}
      transactionIndexName: browser_transaction_{{ app_env }}
      delegationIndexName: browser_delegation_{{ app_env }}
      nodeOptIndexName: browser_nodeopt_{{ app_env }}
      delegationRewardIndexName: browser_delegation_reward_{{ app_env }}
      innerTxIndexName: browser_inner_tx_{{ app_env }}
redisCluster:
  configKey: DEFAULT
  connectionTimeout: 4000
  soTimeout: 5000
  maxRedirections: 3000
  maxTotal: 10
  maxIdle: 5
  minIdle: 2
  maxWaitMillis: 2000
  testOnBorrow: false
  testOnReturn: false
  testWhileIdle: true
  masterIPs: {{ redis.url }}
  password: {{ redis.password }}
server:
  tomcat:
    max-connections: 20000
    threads:
      min-spare: 800
      max: 2000
    connection-timeout: 5000
zuul:
  FormBodyWrapperFilter:
    pre:
     disable: true
logging:
  file:
    name: ./logs/${spring.application.name}-{{ app_env }}.log
  level:
    org.springframework: {{ log_level }}
    com.platon.browser: {{ log_level }}
    com.platon.browser.service: {{ log_level }}
    com.platon.browser.task: {{ log_level }}
    com.platon.browser.client: {{ log_level }}
    com.platon.browser.dao: {{ log_level }}
platon:
  addressPrefix: lat
  valueUnit: LAT
  txLogDecodeThreadNum: 200
  web3j:
    protocol: WS
{% if spec_node_info.ip |length ==2 %}
    addresses: {{ spec_node_info.ip[0] }}:{{ spec_node_info.web3j_port }},{{ spec_node_info.ip[1] }}:{{ spec_node_info.web3j_port }}
{% else %}
    addresses: {{ spec_node_info.ip[0] }}:{{ spec_node_info.web3j_port }}
{% endif %}
  maxSettlePeriodCount4AnnualizedRateStat: 4
  initIssueAmount: 10000000000
  addIssueRate: 0.025
  incentiveRateFromIssue: 0.8
  electionBackwardBlockCount: 20
  foundationSubsidies: {
    '1':62215742.00000000,
    '2':55965742.00000000,
    '3':49559492.00000000,
    '4':42993086.00000000,
    '5':36262520.00000000,
    '6':29363689.00000000,
    '7':22292388.00000000,
    '8':15044304.00000000,
    '9':7615018.00000000
  }
  defaultStakingLockedAmount: 150000
  maxBlockGasLimit: 201600000
  proposalUrlTemplate: https://github.com/PlatONnetwork/PIPs/tree/PIPs/PIP-%s.md
  keyBase: https://keybase.io/
  keyBaseApi: _/api/1.0/user/lookup.json?key_suffix=
  chainId: {{ chainid }}
  redis-namespace: browser:{{ app_env }}

recaptchaUrl: https://recaptcha.net/recaptcha/api/siteverify?secret=6Lf8KLcUAAAAAPyHZfa7oeWjdMSyvgDHUUeYf01Z&response=%s
limit:
  num: 10
output:
  file:
    url: /opt/browser_api/files/
